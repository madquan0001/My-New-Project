package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {

        float lai, tonglai = 0;
        int tien, thang;

        Scanner scanner = new Scanner(System.in);

        System.out.printf("Nhập số tiền gửi : ");
        tien = scanner.nextInt();
        System.out.printf("Nhập số tháng gửi : ");
        thang = scanner.nextInt();
        System.out.printf("Nhập lãi suất : ");
        lai = scanner.nextFloat();

        for (int i = 0 ; i < thang ; i++)
        {
            tonglai = tien * (lai / 100) / 12 * thang;
        }
        System.out.println("Tổng lãi là : " + tonglai);

            }
        }


